<Window x:Class="Bodoconsult.App.Wpf.AppStarter.Forms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bodoconsult.App.Wpf.Converters"
        mc:Ignorable="d"
        Title="{Binding FullAppName}" Height="768" Width="1024" SizeChanged="MainWindow_OnSizeChanged" KeyDown="MainWindow_OnKeyDown"
        Background="Gray" Loaded="MainWindow_OnLoaded">
    <Window.Resources>
        <local:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="Header" VerticalAlignment="Top" Orientation="Horizontal" Grid.Row="0" 
                    Background="{Binding HeaderBackColor, Converter={StaticResource ColorToBrushConverter}}">
            <Image x:Name="LogoImage" Source="{Binding Logo}" Width="300" Height="150" VerticalAlignment="Center"/>
            <Label x:Name="AppName" Content="{Binding AppName}" VerticalAlignment="Center" FontSize="28" FontWeight="Bold" Margin="50,0,0,0 "/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Label x:Name="MsgServerIsListeningOnPort" Content="{Binding MsgServerIsListeningOnPort}"></Label>
            <Label x:Name="MsgServerProcessId" Content="{Binding MsgServerProcessId}" ></Label>
            <Label x:Name="MsgHowToShutdownServer" Content="{Binding MsgHowToShutdownServer}"></Label>
            <TextBlock x:Name="Logging" Margin="50,50,50,50 " HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="White">
                <TextBlock.Text>
                    <Binding Path="LogData" Mode="OneWay"/>
                </TextBlock.Text>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
