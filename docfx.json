{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "src",
          "files": [ "**.csproj" ],
		  "exclude": [ "**/bin/**", "**/obj/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "pages/**", "tests/**", "samples/**", "lic.md", "lic_*.md", "**/bin/**", "**/obj/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
		  "logo.svg",
          "favicon.ico"
        ]
      }
    ],
    "output": "pages",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Bodoconsult.AppInfrastructure",
      "_appTitle": "Bodoconsult.AppInfrastructure",
      "_enableSearch": true,
      "pdf": false
    }
  }
}